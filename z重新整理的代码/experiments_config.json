      },
      {
        "id": "D2_shared_only",
        "description": "只有L_shared",
        "args": "--use-disentangle --alpha 0 --beta 0.5 --save-predictions --experiment_id D2_shared_only"
      },
      {
        "id": "D3_full_disentangle",
        "description": "完整解纠缠（等价于M1）",
        "args": "--use-disentangle --alpha 0.5 --beta 0.5 --save-predictions --experiment_id D3_full_disentangle"
      }
    ]
  },
  
  "adaptive_fusion_ablation": {
    "description": "自适应融合损失消融（FA1-FA4）：验证融合策略的有效性",
