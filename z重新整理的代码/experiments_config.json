      },
      {
        "id": "FA2_align_only",
        "description": "只有L_align",
        "args": "--use-adaptive-fusion --lambda-align 0.1 --lambda-balance 0 --save-predictions --experiment_id FA2_align_only"
      },
      {
        "id": "FA3_balance_only",
        "description": "只有L_balance",
        "args": "--use-adaptive-fusion --lambda-align 0 --lambda-balance 0.05 --save-predictions --experiment_id FA3_balance_only"
      },
      {
        "id": "FA4_full_adaptive",
        "description": "完整自适应融合（等价于M3）",
        "args": "--use-adaptive-fusion --lambda-align 0.1 --lambda-balance 0.05 --save-predictions --experiment_id FA4_full_adaptive"
      }
    ]
  },
  
